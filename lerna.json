{
	"lerna": "4.0.0",
	"npmClient": "yarn",
	"version": "independent",
	"packages": [
		"packages/*"
	],
	"useWorkspaces": true,
	"command": {
		"publish": {
			"ignoreChanges": [
				"ignored-files"
			],
			"npmClientArgs": ["--no-package-lock"],
			"registry": "https://registry.npmjs.org"
		}
	}
}