{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Node",
		"jsx": "preserve",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"sourceMap": false,
		"isolatedModules": false,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"skipLibCheck": true,
		"allowJs": true,
		"noImplicitThis": true,
		"declaration": true,
		"lib": [
			"ESNext",
			"DOM"
		]
	},
	"exclude": [
		"./node_modules",
		"./dist"
	]
}
