{
	"compilerOptions": {
		"sourceMap": false,
		"isolatedModules": false,
		"esModuleInterop": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"target": "ESNext",
		"skipLibCheck": true,
		"moduleResolution": "Node",
		"jsx": "react"
	},
	"include": ["./packages", "./storybook"],
	"exclude": ["./node_modules", "./dist"]
}
